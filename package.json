{
  "name": "@repo/dm-helper",
  "private": true,
  "engines": {
    "node": ">=20"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "pnpm run format:fix"
    ]
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "graph": "pnpm graph:build",
    "graph:build": "turbo run build --dry-run=text --graph=docs/turbo-build.mermaid",
    "graph:build:json": "turbo run build --dry-run=text --graph=docs/turbo-build.json",
    "graph:build:dot": "turbo run build --dry-run=text --graph=docs/turbo-build.dot",
    "graph:typecheck": "turbo run typecheck --dry-run=text --graph=docs/turbo-typecheck.mermaid",
    "graph:typecheck:json": "turbo run typecheck --dry-run=text --graph=docs/turbo-typecheck.json",
    "graph:typecheck:dot": "turbo run typecheck --dry-run=text --graph=docs/turbo-typecheck.dot",
    "graph:check-types": "turbo run check-types --dry-run=text --graph=docs/turbo-check-types.mermaid",
    "graph:check-types:json": "turbo run check-types --dry-run=text --graph=docs/turbo-check-types.json",
    "graph:check-types:dot": "turbo run check-types --dry-run=text --graph=docs/turbo-check-types.dot",
    "clean": "git clean -xdf node_modules .turbo",
    "clean:cache": "rimraf .turbo node_modules/.cache apps/**/.next apps/**/.turbo packages/**/.turbo packages/**/dist",
    "clean:all": "rimraf .turbo node_modules apps/**/node_modules packages/**/node_modules apps/**/.next packages/**/dist packages/**/.turbo apps/**/.turbo tooling/**/node_modules",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "db:test": "turbo db:test",
    "dev": "turbo dev --parallel",
    "dev:webapp": "turbo dev --filter webapp",
    "start": "turbo start",
    "format": "turbo format --continue -- --cache --cache-location node_modules/.cache/.prettiercache",
    "format:fix": "turbo format --continue -- --write --cache --cache-location node_modules/.cache/.prettiercache",
    "lint": "turbo lint --continue -- --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint --continue -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "postinstall": "pnpm lint:ws",
    "typecheck": "turbo typecheck"
  },
  "devDependencies": {
    "knip": "^5.18.0",
    "prettier": "catalog:",
    "rimraf": "^6.0.1",
    "turbo": "catalog:",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.0.4+sha512.c374b52de3de88c58fd8333df664a737279cdb0e1344ba4054d3b1fffa9a1a3670854f755dca4f16adea3f14be9896a7fcaf167409fe0c1ad60475271dafe81a"
}

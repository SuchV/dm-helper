generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id String @id @default(cuid()) @map("_id")
  userId  String
  type  String
  provider  String
  providerAccountId String @unique
  refresh_token String? 
  access_token  String? 
  expires_at  Int?
  token_type  String?
  scope String?
  id_token  String?
  session_state String?

  birthday Birthday?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String?   @unique
  image         String?
  emailVerified DateTime?

  accounts Account[]
  sessions Session[]
  bingoEntries BingoEntry[]
}

model VerificationToken {
  id String @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Birthday {
  id String @id @default(cuid()) @map("_id")
  providerAccountId String @unique
  birthday_date DateTime
  guildId String
  last_year_mentioned Int @default(0)

  account Account @relation(fields: [providerAccountId], references: [providerAccountId], onDelete: Cascade)

  @@unique([providerAccountId, guildId])
}

model GuildSettings {
  id String @id @default(cuid()) @map("_id")
  guildId String
  languageCode String
  birthdayChannelId String?
  birthdayRoleId String?

  @@unique([guildId])
}

model RoleGroup {
  id String @id @default(cuid()) @map("_id")
  guildId String
  name String
  rolesIdArray String[]
  verificationId String

  @@unique([guildId, name])

  verifications Verification @relation(fields: [verificationId], references: [id], onDelete: Cascade)
}

model Verification {
  id String @id @default(cuid()) @map("_id")
  guildId String
  channelId String
  messageId String

  requiredRoleGroups RoleGroup[]
}

model BingoEntry {
  id String @id @default(cuid()) @map("_id")
  bingoId String
  userId String?
  entry String

  bingo Bingo @relation(fields: [bingoId], references: [id], onDelete: Cascade)
  user User? @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Only square bingo is supported for now
model Bingo {
  id String @id @default(cuid()) @map("_id")
  guildId String
  channelId String
  messageId String
  name String
  dimension Int
  bingoEntries BingoEntry[]

  @@unique([guildId, channelId, messageId])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


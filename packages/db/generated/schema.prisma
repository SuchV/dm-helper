generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid()) @map("_id")
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  accounts  Account[]
  sessions  Session[]
  birthdays Birthday[]
}

model VerificationToken {
  id         String   @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Birthday {
  id                  String   @id @default(cuid()) @map("_id")
  userId              String
  birthday_date       DateTime
  guildId             String
  last_year_mentioned Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, guildId])
}

model GuildSettings {
  id                String  @id @default(cuid()) @map("_id")
  guildId           String
  languageCode      String
  birthdayChannelId String?
  birthdayRoleId    String?

  @@unique([guildId])
}

model RoleGroup {
  id             String   @id @default(cuid()) @map("_id")
  guildId        String
  name           String
  rolesIdArray   String[]
  verificationId String

  verifications Verification @relation(fields: [verificationId], references: [id], onDelete: Cascade)

  @@unique([guildId, name])
}

model Verification {
  id        String @id @default(cuid()) @map("_id")
  guildId   String
  channelId String
  messageId String

  requiredRoleGroups RoleGroup[]
}

{
  "name": "@repo/db",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "db:push": "pnpm with-env prisma db push",
    "db:studio": "pnpm with-env prisma studio",
    "db:generate": "pnpm with-env prisma generate",
    "db:migrate": "pnpm with-env prisma migrate",
    "test": "echo \"Error: no test specified\" && exit 1",
    "with-env": "dotenv -e ../../.env --",
    "dev": "echo \"@repo/db: no dev server (run 'pnpm --filter @repo/db run db:studio' to open Prisma Studio)\"",
    "db:seed": "pnpm with-env prisma db seed",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "@repo/env": "workspace:*",
    "dotenv": "^16.5.0",
    "prisma": "^6.8.2",
    "tsx": "^4.19.4"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "dotenv-cli": "^7.3.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}

{
  "name": "@spolka-z-l-o/bot",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "main": "index.js",
  "scripts": {
    "dev": "pnpm with-env tsx watch src/index.ts",
    "check-types": "tsc --noEmit",
    "start": "node dist/index.js",
    "build": "tsup src/index.ts --minify",
    "clear-db": "ts-node src/scripts/clear-db.ts",
    "seed-db": "ts-node src/scripts/seed-db.ts",
    "with-env": "dotenv -e ../../.env --",
    "typecheck": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./src/index.ts"
    },
    "./*": {
      "types": "./dist/src/*.d.ts",
      "default": [
        "./src/*.ts",
        "./src/*.tsx"
      ]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@spolka-z-l-o/db": "workspace:*",
    "@spolka-z-l-o/env": "workspace:*",
    "date-fns": "^4.1.0",
    "discord.js": "^14.22.1",
    "dotenv": "^16.5.0",
    "mongoose": "^8.15.0",
    "node-cron": "^4.0.6",
    "zod": "^3.25.51"
  },
  "devDependencies": {
    "@spolka-z-l-o/eslint-config": "workspace:*",
    "@spolka-z-l-o/prettier-config": "workspace:*",
    "@spolka-z-l-o/tailwind-config": "workspace:*",
    "@spolka-z-l-o/tsconfig": "workspace:*",
    "@types/node": "^22.15.21",
    "dotenv-cli": "^7.3.0",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "tsx": "^4.19.4",
    "typescript": "catalog:"
  }
}

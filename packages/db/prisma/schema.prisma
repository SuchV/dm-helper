generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Account {
  id String @id @default(cuid()) @map("_id")
  userId  String
  type  String
  provider  String
  providerAccountId String @unique
  refresh_token String? 
  access_token  String? 
  expires_at  Int?
  token_type  String?
  scope String?
  id_token  String?
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid()) @map("_id")
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid()) @map("_id")
  name          String?
  email         String?   @unique
  image         String?
  emailVerified DateTime?

  accounts Account[]
  sessions Session[]
  gameClockStates GameClockState[]
  widgets WidgetInstance[]
  notes GameNote[]
  diceRollLogs DiceRollLog[]
  pdfTabs PdfDocumentTab[]
  pdfBookmarks PdfBookmark[]
}

model VerificationToken {
  id String @id @default(cuid()) @map("_id")
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model GameClockState {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  gameTime  String   @default("00:00:00")
  gameDate  String   @default("0000-01-01")
  weekDay   String   @default("Monday")
  updatedAt DateTime @updatedAt
  widgetId  String   @unique

  user   User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  widget WidgetInstance @relation(fields: [widgetId], references: [id], onDelete: Cascade)

  @@unique([userId, widgetId])
  @@index([userId])
}

model WidgetInstance {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  type      String
  collapsed Boolean  @default(false)
  position  Int      @default(0)
  config    Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameClockState GameClockState?
  notes          GameNote[]
  diceRollLogs   DiceRollLog[]
  pdfTabs        PdfDocumentTab[]

  @@index([userId])
  @@index([userId, type])
}

model GameNote {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  widgetId  String
  title     String   @default("Untitled note")
  content   String   @default("")
  position  Int      @default(0)
  pinned    Boolean  @default(false)
  pinnedAt  DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  widget WidgetInstance @relation(fields: [widgetId], references: [id], onDelete: Cascade)

  @@index([widgetId])
  @@index([widgetId, pinned, pinnedAt])
}

model DiceRollLog {
  id        String   @id @default(cuid()) @map("_id")
  userId    String
  widgetId  String
  total     Int
  modifier  Int
  results   Json
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  widget WidgetInstance @relation(fields: [widgetId], references: [id], onDelete: Cascade)

  @@index([widgetId, createdAt])
}

model PdfDocumentTab {
  id            String   @id @default(cuid()) @map("_id")
  userId        String
  widgetId      String
  title         String
  storageKey    String
  pinned        Boolean  @default(false)
  pinnedAt      DateTime?
  isOpen        Boolean  @default(true)
  isActive      Boolean  @default(false)
  lastOpenedAt  DateTime @default(now())
  currentPage   Int      @default(1)
  totalPages    Int?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  widget WidgetInstance @relation(fields: [widgetId], references: [id], onDelete: Cascade)
  bookmarks PdfBookmark[]

  @@index([widgetId, pinned, isOpen])
  @@index([widgetId, isActive])
  @@unique([userId, storageKey])
}

model PdfBookmark {
  id         String   @id @default(cuid()) @map("_id")
  userId     String
  tabId      String
  label      String
  pageNumber Int
  note       String?
  chapterLabel String?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  tab  PdfDocumentTab @relation(fields: [tabId], references: [id], onDelete: Cascade)

  @@index([tabId])
}



